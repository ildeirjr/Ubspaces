<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufop.ildeir.ubspaces.activities.LogoutActivity"
    android:orientation="vertical"
    android:background="@color/greyBg"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua conta foi removida ou está ativa em outro dispositivo. Por favor, faça o login novamente."
        android:textAlignment="center"/>

    <Button
        android:id="@+id/backToLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar para tela de login"
        android:layout_margin="20dp"
        android:onClick="toLoginActivity"
        />

</LinearLayout>
