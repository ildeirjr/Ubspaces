<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/itemBackgroundColor">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/deleteIconPadding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/delete_icon"
            android:textColor="@color/white"
            android:text="DELETE"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_list_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/objectImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_camera"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/objectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/objectNameListSize"/>

            <TextView
                android:id="@+id/objectCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³digo: "/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>